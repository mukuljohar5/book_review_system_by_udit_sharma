<div class="review">
        <div class= "review-rating" data-score="<%= review.rating %>"></div>
        <p class="review-comment"><%= review.comment %><br></p>
        <% if user_signed_in? %>
            <% if review.user_id == current_user.id %>
                   <div class="links btn-group">
                        <%= link_to "Edit Review", edit_book_review_path(review.book, review), class: "btn btn-custom" %><br>
                        <%= button_to "Delete review", book_review_path(review.book, review), method: :delete, data: {confirm: "Are you Sure?" }, class: "btn btn-custom" %><br>
                    </div>
            <% end %>       
        <% end %>    
</div>         